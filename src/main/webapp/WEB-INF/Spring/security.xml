<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-4.0.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<security:http pattern="/resources**" security="none"/>
	<security:http auto-config="true" use-expressions="true">
		<security:intercept-url pattern="/" access="permitAll"/>
		<security:intercept-url pattern="/Program/**" access="hasRole('DBA') or hasRole('ADMIN')"/>
		<security:intercept-url pattern="/Batch/**" access="hasRole('COORDINATOR') or hasRole('ADMIN')"/>
		<security:form-login authentication-failure-url="/Access_Denied" />
		<security:logout logout-success-url="/"/>
	</security:http>
		
	<security:authentication-manager>
		<security:authentication-provider>
			<security:user-service>
				<security:user name="bill" password="123" authorities="ROLE_ADMIN" />
				<security:user name="a" password="23" authorities="ROLE_DBA"/>
				<security:user name="co" password="co" authorities="ROLE_COORDINATOR"/>
			</security:user-service>
		</security:authentication-provider>

	</security:authentication-manager>

</beans>
